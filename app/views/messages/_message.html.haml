.main-chat__message-list__box{data: {message: {id: message.id}}}
  .main-chat__message-list__box__upload
    .main-chat__message-list__box__upload__name
      = message.user.name
    .main-chat__message-list__box__upload__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__box__message
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: "" if message.image.present?